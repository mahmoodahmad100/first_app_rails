<h1>Home page</h1>

<% @posts.each do |post| %>
<div class="post">
	<h2 class="title"><%= link_to post.title, post %></h2>
	<div class="entry">
		<p><%= post.body %></p>
	</div>
	<div class="byline">
		<p class="meta"><%= post.created_at.strftime("%b %d, %Y") %> Posted by <a href="#">Someone</a></p>
		<p class="links"><%= link_to "Read More", post %>&nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;<a href="#" title="b0x w">Comments</a></p>
	</div>
</div>
<% end %>
