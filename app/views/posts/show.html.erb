<h4>Category: <%= link_to @post.category.name,@post.category %></h4> 
<div class="post">
	<h2 class="title"><%= @post.title %></h2>
	<div class="entry">
		<p><%= @post.body %></p>
	</div>
	<div class="byline">
		<p class="meta"><%= @post.created_at.strftime("%b %d, %Y") %> Posted by <a href="#">Someone</a></p>
		<p class="links"><%= link_to "edit", edit_post_path %>&nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "delete",@post, :confirm => "are you sure that you want to delete it ?", :method => :delete %></p>
	</div>
</div>