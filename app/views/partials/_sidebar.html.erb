				<div id="sidebar">
					<ul>
						<li>
							<div id="search" >
								<%= form_for @search do |f| %>
									<%= f.text_field :title_or_body_contains, :id => 'search-text' %>
									<%= f.submit "GO", :id => 'search-submit' %>
								<% end %>
							</div>
							<div style="clear: both;">&nbsp;</div>
						</li>
						<li>
							<h2>Get The Framework</h2>
							<p>You can download Ruby and/or Ruby on Rails for free right now
                                                            <br />
                                                            <a style="color:#D93544;" href="http://rubyonrails.org/download" target="blank">GET IT NOW</a>
                                                        </p>
						</li>
						<li>
							<h2>Categories</h2>
							<ul>
								<% all_categories.each do |category| %>
									<li><%= link_to category.name, category %></li>
								<% end %>					
							</ul>
						</li>
						<li>
							<h2>Blogroll</h2>
							<ul>
								<% all_posts.each do |post| %>
									<li><%= link_to post.title, post %></li>
								<% end %>	
							</ul>
						</li>
						
					</ul>
				</div>
